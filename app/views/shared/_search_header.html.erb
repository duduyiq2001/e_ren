<%# Simplified search page header %>
<%# Usage: <%= render 'shared/search_header', title: 'Search Events', subtitle: 'Find your next campus activity' %>
<header class="bg-washu-red text-white py-16 relative overflow-hidden">
  <div class="gothic-pattern absolute inset-0 opacity-20"></div>
  <div class="container mx-auto px-4 relative z-10">
    <div class="flex justify-between items-center mb-8">
      <%= link_to root_path, class: "flex items-center space-x-2 text-white hover:text-gray-200 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        <span>Back to Events</span>
      <% end %>
    </div>

    <div class="text-center">
      <h1 class="text-3xl md:text-5xl font-bold mb-4"><%= local_assigns[:title] || 'Search Events' %></h1>
      <% if local_assigns[:subtitle] %>
        <p class="text-lg md:text-xl text-pink-100"><%= subtitle %></p>
      <% end %>
    </div>
  </div>
</header>
