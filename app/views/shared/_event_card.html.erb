<%# Event card component - Cyberpunk style %>
<%# Usage: <%= render 'shared/event_card', event: event, registration: @user_registrations&.[](event.id) %>

<div class="relative group">
  <%# Shadow layer %>
  <div class="absolute inset-0 bg-black skew-card translate-x-2 translate-y-2 transition-transform group-hover:translate-x-1 group-hover:translate-y-1"></div>

  <%# Card body %>
  <div class="relative bg-cyber-card border-3 border-black skew-card p-6 transition-transform group-hover:translate-x-1 group-hover:translate-y-1" style="border-width: 3px;">
    <div class="transform skew-x-[10deg]">
      <%# Category badge %>
      <div class="absolute -top-3 left-1/2 -translate-x-1/2 rotate-2 bg-cyber-lime text-black text-xs font-bold px-3 py-1 border-2 border-black shadow-md">
        <%= event.event_category.name %>
      </div>

      <%# Date %>
      <div class="flex justify-end mb-2 mt-2">
        <span class="text-cyber-grey text-sm"><%= event.event_time.strftime("%b %d") %></span>
      </div>

      <%# Event Title %>
      <h3 class="text-lg font-bold text-white mb-4 hover:text-cyber-crimson transition-colors">
        <%= link_to event.name, event_post_path(event) %>
      </h3>

      <%# Event Details %>
      <div class="space-y-2 mb-4 text-sm">
        <div class="flex items-center text-cyber-grey">
          <svg class="w-4 h-4 mr-2 text-cyber-crimson" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <% if event.google_maps_url.present? %>
            <%= link_to event.location_name, event.google_maps_url, target: "_blank", rel: "noopener", class: "hover:text-cyber-lime transition-colors", title: "View on Google Maps" %>
          <% else %>
            <%= event.location_name %>
          <% end %>
        </div>
        <div class="flex items-center text-cyber-grey">
          <svg class="w-4 h-4 mr-2 text-cyber-crimson" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <%= event.event_time.strftime("%I:%M %p") %>
        </div>
        <div class="flex items-center text-cyber-grey">
          <svg class="w-4 h-4 mr-2 text-cyber-crimson" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
          </svg>
          <%= event.registrations_count %> / <%= event.capacity %> registered
        </div>
      </div>

      <%# Organizer %>
      <p class="text-cyber-grey text-sm mb-4">
        <strong class="text-white">By:</strong> <%= link_to event.organizer.name, user_path(event.organizer), class: "text-cyber-lime hover:underline" %>
      </p>

      <%# Action Buttons %>
      <div class="pt-4 border-t border-white/20">
        <% if local_assigns[:registration] && registration %>
          <div class="flex items-center justify-between gap-2">
            <% if registration.waitlisted? %>
              <span class="flex-1 text-center py-2 bg-yellow-500 text-black font-bold text-sm">
                Waitlisted
              </span>
            <% else %>
              <span class="flex-1 text-center py-2 bg-cyber-lime text-black font-bold text-sm">
                Registered
              </span>
            <% end %>
            <%= button_to "Unregister",
                event_post_event_registration_path(event, registration),
                method: :delete,
                class: "px-3 py-2 bg-cyber-crimson text-white font-bold text-sm hover:bg-red-400 transition-colors",
                data: { confirm: "Are you sure?" } %>
          </div>
        <% else %>
          <% if event.full? %>
            <%= button_to "Join Waitlist",
                event_post_event_registrations_path(event),
                method: :post,
                class: "w-full py-3 bg-yellow-500 text-black font-bold hover:bg-yellow-400 transition-colors" %>
          <% else %>
            <%= button_to "Register",
                event_post_event_registrations_path(event),
                method: :post,
                class: "w-full py-3 bg-cyber-lime text-black font-bold hover:bg-white transition-colors" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
