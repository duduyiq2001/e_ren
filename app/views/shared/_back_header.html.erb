<%# Simplified header with back navigation - Cyberpunk style %>
<%# Usage: <%= render 'shared/back_header', title: 'Event Details', back_path: root_path, back_text: 'Back to Events' %>

<header class="border-b-2 border-cyber-grey bg-cyber-bg/95 backdrop-blur sticky top-0 z-50 py-4">
  <div class="max-w-7xl mx-auto px-4 flex justify-between items-center">
    <%= link_to (local_assigns[:back_path] || root_path), class: "flex items-center gap-2 text-cyber-grey hover:text-cyber-lime transition-colors" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      <span class="text-sm font-bold uppercase"><%= local_assigns[:back_text] || '< Back' %></span>
    <% end %>

    <h1 class="font-display text-xl text-white uppercase"><%= local_assigns[:title] || 'Page' %></h1>

    <div class="w-24"></div>
  </div>
</header>
