<!-- Header Section -->
<header class="bg-washu-red text-white py-16 relative overflow-hidden">
  <div class="gothic-pattern absolute inset-0 opacity-20"></div>
  <div class="container mx-auto px-4 relative z-10 text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">Check Your Email</h1>
    <p class="text-xl text-pink-100">One more step to complete your registration</p>
  </div>
</header>

<!-- Main Content -->
<main class="container mx-auto px-4 py-12">
  <div class="max-w-2xl mx-auto">
    <!-- Confirmation Card -->
    <div class="bg-white rounded-lg shadow-lg p-8 md:p-12 fade-in text-center">
      <!-- Email Icon -->
      <div class="mb-6">
        <svg class="w-24 h-24 mx-auto text-washu-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
      </div>

      <!-- Message -->
      <h2 class="text-3xl font-bold text-washu-gray mb-4">
        Confirmation Email Sent!
      </h2>

      <div class="space-y-4 text-lg text-gray-700">
        <p>
          We've sent a confirmation link to:
        </p>

        <% if @email.present? %>
          <p class="text-xl font-semibold text-washu-red">
            <%= @email %>
          </p>
        <% else %>
          <p class="text-xl font-semibold text-washu-red">
            your email address
          </p>
        <% end %>

        <p class="pt-4">
          Please click the link in the email to activate your account.
        </p>

        <p class="text-base text-gray-600">
          <strong>Didn't receive the email?</strong> Check your spam folder or contact support.
        </p>
      </div>

      <!-- Action Buttons -->
      <div class="mt-8 space-y-3">
        <%= link_to "Go to Sign In Page", new_user_session_path,
            class: "block w-full px-6 py-3 bg-washu-red text-white rounded-lg font-bold text-lg hover:bg-red-700 shadow-lg transition-all duration-300" %>

        <%= link_to "Back to Home", root_path,
            class: "block w-full px-6 py-3 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300 transition-all duration-300" %>
      </div>
    </div>
  </div>
</main>
