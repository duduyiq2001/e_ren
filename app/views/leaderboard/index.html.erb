<%= render 'shared/navbar', title: 'E-Point Leaders', subtitle: 'Top 10 Most Active Students' %>

<div class="container mx-auto px-4">
  <!-- Leaderboard Table -->
  <div class="bg-white rounded-lg shadow-lg p-8 max-w-4xl mx-auto mb-8">
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead>
          <tr class="border-b-2 border-gray-200">
            <th class="text-left py-4 px-6 font-bold text-gray-900 text-lg">Rank</th>
            <th class="text-left py-4 px-6 font-bold text-gray-900 text-lg">User</th>
            <th class="text-right py-4 px-6 font-bold text-gray-900 text-lg">E-Points</th>
          </tr>
        </thead>
        <tbody>
          <% @leaderboard.each do |entry| %>
            <tr class="border-b border-gray-100 hover:bg-gray-50 <%= 'bg-yellow-50' if entry[:rank] == 1 %> <%= 'bg-gray-50' if entry[:rank] == 2 %> <%= 'bg-orange-50' if entry[:rank] == 3 %>">
              <td class="py-4 px-6">
                <div class="flex items-center space-x-3">
                  <% if entry[:rank] == 1 %>
                    <span class="text-2xl font-bold">1st</span>
                  <% elsif entry[:rank] == 2 %>
                    <span class="text-2xl font-bold">2nd</span>
                  <% elsif entry[:rank] == 3 %>
                    <span class="text-2xl font-bold">3rd</span>
                  <% else %>
                    <div class="w-10 h-10 bg-gray-200 rounded-full flex items-center justify-center font-bold text-gray-700">
                      <%= entry[:rank] %>
                    </div>
                  <% end %>
                </div>
              </td>
              <td class="py-4 px-6">
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 bg-red-600 rounded-full flex items-center justify-center text-white font-bold">
                    <%= entry[:user].name.first %>
                  </div>
                  <%= link_to entry[:user].name, user_path(entry[:user]), class: "font-medium text-lg text-gray-900 hover:text-red-600" %>
                  <% if entry[:is_current_user] %>
                    <span class="bg-red-600 text-white px-2 py-1 rounded-full text-xs font-bold">You</span>
                  <% end %>
                </div>
              </td>
              <td class="py-4 px-6 text-right">
                <span class="font-bold text-2xl text-red-600"><%= entry[:user].e_score %></span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Back Button -->
  <div class="text-center mb-12">
    <%= link_to "Back to Events", root_path, class: "px-8 py-4 bg-red-600 text-white rounded-lg font-bold text-lg hover:bg-red-700 transition-all duration-300 shadow-lg inline-block" %>
  </div>
</div>
