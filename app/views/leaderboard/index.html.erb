<%= render 'shared/navbar', title: 'Leaderboard', subtitle: 'Top 10 Most Active Students' %>

<main class="max-w-4xl mx-auto px-4 py-12">
  <%# Leaderboard Card %>
  <div class="relative mb-8">
    <div class="absolute inset-0 bg-black translate-x-3 translate-y-3"></div>
    <div class="relative bg-cyber-card border-2 border-black p-8">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="border-b-2 border-cyber-grey/30">
              <th class="text-left py-4 px-6 text-cyber-grey text-sm font-bold">Rank</th>
              <th class="text-left py-4 px-6 text-cyber-grey text-sm font-bold">User</th>
              <th class="text-right py-4 px-6 text-cyber-grey text-sm font-bold">E-Points</th>
            </tr>
          </thead>
          <tbody>
            <% @leaderboard.each do |entry| %>
              <tr class="border-b border-cyber-grey/20 hover:bg-white/5 <%= 'bg-yellow-500/10' if entry[:rank] == 1 %> <%= 'bg-gray-500/10' if entry[:rank] == 2 %> <%= 'bg-orange-500/10' if entry[:rank] == 3 %>">
                <td class="py-4 px-6">
                  <div class="flex items-center">
                    <% if entry[:rank] == 1 %>
                      <span class="text-2xl font-bold text-yellow-500">1st</span>
                    <% elsif entry[:rank] == 2 %>
                      <span class="text-2xl font-bold text-gray-400">2nd</span>
                    <% elsif entry[:rank] == 3 %>
                      <span class="text-2xl font-bold text-orange-500">3rd</span>
                    <% else %>
                      <div class="w-10 h-10 bg-cyber-grey/20 flex items-center justify-center font-bold text-cyber-grey">
                        <%= entry[:rank] %>
                      </div>
                    <% end %>
                  </div>
                </td>
                <td class="py-4 px-6">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 bg-cyber-crimson flex items-center justify-center text-white font-bold">
                      <%= entry[:user].name.first %>
                    </div>
                    <%= link_to entry[:user].name, user_path(entry[:user]), class: "font-bold text-lg text-white hover:text-cyber-lime transition-colors" %>
                    <% if entry[:is_current_user] %>
                      <span class="bg-cyber-lime text-black px-2 py-1 text-xs font-bold">You</span>
                    <% end %>
                  </div>
                </td>
                <td class="py-4 px-6 text-right">
                  <span class="font-bold text-2xl text-yellow-500"><%= entry[:user].e_score %></span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <%# Back Button %>
  <div class="text-center">
    <%= link_to "Back to Events", root_path, class: "skew-btn inline-block bg-cyber-crimson text-white px-8 py-4 font-bold text-lg shadow-[5px_5px_0px_black] hover:shadow-[7px_7px_0px_black] hover:-translate-x-0.5 hover:-translate-y-0.5 transition-all" %>
  </div>
</main>

<footer class="text-center text-cyber-grey py-10 border-t border-cyber-grey/30 text-sm mt-12">
  SYSTEM STATUS: ONLINE /// e_ren SPACE Â© <%= Time.current.year %>
</footer>
