<style>
  .form-input {
    transition: all 0.3s ease;
  }
  .form-input:focus {
    border-color: #BA0C2F;
    box-shadow: 0 0 0 3px rgba(186, 12, 47, 0.1);
  }
</style>

<!-- Header Section -->
<header class="bg-washu-red text-white py-16 relative overflow-hidden">
  <div class="gothic-pattern absolute inset-0 opacity-20"></div>
  <div class="container mx-auto px-4 relative z-10 text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">Welcome Back!</h1>
    <p class="text-xl text-pink-100">Log in to discover campus events</p>
  </div>
</header>

<!-- Main Content -->
<main class="container mx-auto px-4 py-12">
  <div class="max-w-md mx-auto">
    <!-- Flash Messages -->
    <% if alert %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6 fade-in">
        <div class="flex items-center">
          <svg class="w-5 h-5 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="text-red-700 font-medium"><%= alert %></span>
        </div>
      </div>
    <% end %>

    <!-- Login Card -->
    <div class="bg-white rounded-lg shadow-lg p-8 fade-in">
      <h2 class="text-2xl font-bold text-washu-gray mb-6 text-center">Log In</h2>

      <%= form_with(url: login_path, class: "space-y-6") do |form| %>
        <!-- Email -->
        <div>
          <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.email_field :email,
              class: "form-input w-full px-4 py-3 border-2 border-gray-300 rounded-lg outline-none",
              placeholder: "your.email@wustl.edu",
              required: true,
              autofocus: true %>
        </div>

        <!-- Password -->
        <div>
          <%= form.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.password_field :password,
              class: "form-input w-full px-4 py-3 border-2 border-gray-300 rounded-lg outline-none",
              placeholder: "••••••••",
              required: true %>
        </div>

        <!-- Submit Button -->
        <div>
          <%= form.submit "Log In",
              class: "w-full px-6 py-3 bg-washu-red text-white rounded-lg font-bold text-lg hover:bg-red-700 shadow-lg transition-all duration-300" %>
        </div>
      <% end %>

      <!-- Sign Up Link -->
      <div class="mt-6 text-center">
        <p class="text-gray-600">
          Don't have an account?
          <%= link_to "Sign Up", signup_path, class: "text-washu-red font-medium hover:underline" %>
        </p>
      </div>
    </div>
  </div>
</main>
