<%# Cyberpunk Login Page %>
<header class="border-b-2 border-cyber-grey bg-cyber-bg/95 backdrop-blur sticky top-0 z-50 py-4">
  <div class="max-w-7xl mx-auto px-4 flex justify-between items-center">
    <%= link_to root_path, class: "flex items-center gap-2 text-cyber-grey hover:text-cyber-lime transition-colors" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      <span class="text-sm font-bold uppercase">< Home</span>
    <% end %>

    <h1 class="font-display text-xl text-white uppercase">Authentication</h1>

    <div class="w-24"></div>
  </div>
</header>

<main class="max-w-md mx-auto px-4 py-16">
  <%# Hero %>
  <div class="text-center mb-10">
    <h2 class="font-display text-4xl text-white uppercase mb-2 text-shadow-cyber">System Access</h2>
    <p class="text-cyber-grey">// Authenticate to access missions</p>
  </div>

  <%# Flash Messages %>
  <% if alert %>
    <div class="bg-cyber-crimson/20 border-2 border-cyber-crimson p-4 mb-6">
      <div class="flex items-center gap-3">
        <svg class="w-5 h-5 text-cyber-crimson" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="text-cyber-crimson font-bold text-sm uppercase"><%= alert %></span>
      </div>
    </div>
  <% end %>

  <%# Login Card %>
  <div class="relative">
    <div class="absolute inset-0 bg-black skew-card translate-x-2 translate-y-2"></div>
    <div class="relative bg-cyber-card border-2 border-black p-8">
      <h3 class="font-display text-lg text-cyber-lime uppercase mb-6 text-center">> Log In</h3>

      <%= form_with(url: login_path, class: "space-y-6") do |form| %>
        <%# Email %>
        <div>
          <%= form.label :email, class: "block text-cyber-grey text-sm font-bold uppercase mb-2" do %>
            Email Address <span class="text-cyber-crimson">*</span>
          <% end %>
          <%= form.email_field :email,
              class: "w-full bg-cyber-bg border-2 border-cyber-grey text-white px-4 py-3 focus:border-cyber-lime focus:outline-none transition-colors",
              placeholder: "agent@email.com",
              required: true,
              autofocus: true %>
        </div>

        <%# Password %>
        <div>
          <%= form.label :password, class: "block text-cyber-grey text-sm font-bold uppercase mb-2" do %>
            Password <span class="text-cyber-crimson">*</span>
          <% end %>
          <%= form.password_field :password,
              class: "w-full bg-cyber-bg border-2 border-cyber-grey text-white px-4 py-3 focus:border-cyber-lime focus:outline-none transition-colors",
              placeholder: "••••••••",
              required: true %>
        </div>

        <%# Submit Button %>
        <div class="pt-4">
          <%= form.submit "Authenticate >>",
              class: "skew-btn w-full bg-cyber-crimson text-white px-8 py-4 font-display text-lg uppercase shadow-[5px_5px_0px_black] hover:shadow-[7px_7px_0px_black] hover:-translate-x-0.5 hover:-translate-y-0.5 transition-all cursor-pointer" %>
        </div>
      <% end %>

      <%# Sign Up Link %>
      <div class="mt-8 text-center border-t border-white/10 pt-6">
        <p class="text-cyber-grey text-sm">
          No account?
          <%= link_to "Register New Agent", signup_path, class: "text-cyber-lime font-bold uppercase hover:underline" %>
        </p>
      </div>
    </div>
  </div>
</main>

<footer class="text-center text-cyber-grey py-10 border-t border-cyber-grey/30 text-sm mt-12">
  SYSTEM STATUS: ONLINE /// e_ren SPACE © <%= Time.current.year %>
</footer>
