<style>
  .form-input {
    transition: all 0.3s ease;
  }
  .form-input:focus {
    border-color: #BA0C2F;
    box-shadow: 0 0 0 3px rgba(186, 12, 47, 0.1);
  }
</style>

<!-- Header Section -->
<header class="bg-washu-red text-white py-16 relative overflow-hidden">
  <div class="gothic-pattern absolute inset-0 opacity-20"></div>
  <div class="container mx-auto px-4 relative z-10 text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">Join WashU ESpace</h1>
    <p class="text-xl text-pink-100">Connect with fellow Bears through amazing events</p>
  </div>
</header>

<!-- Main Content -->
<main class="container mx-auto px-4 py-12">
  <div class="max-w-md mx-auto">
    <!-- Signup Card -->
    <div class="bg-white rounded-lg shadow-lg p-8 fade-in">
      <h2 class="text-2xl font-bold text-washu-gray mb-6 text-center">Create Account</h2>

      <%= form_with(model: @user, url: signup_path, class: "space-y-6") do |form| %>
        <!-- Error Messages -->
        <% if @user.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6 slide-in">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@user.errors.count, "error") %> prohibited this account from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Name -->
        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :name,
              class: "form-input w-full px-4 py-3 border-2 border-gray-300 rounded-lg outline-none",
              placeholder: "Your full name",
              required: true %>
        </div>

        <!-- Email -->
        <div>
          <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.email_field :email,
              class: "form-input w-full px-4 py-3 border-2 border-gray-300 rounded-lg outline-none",
              placeholder: "your.email@wustl.edu",
              required: true %>
        </div>

        <!-- Password -->
        <div>
          <%= form.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.password_field :password,
              class: "form-input w-full px-4 py-3 border-2 border-gray-300 rounded-lg outline-none",
              placeholder: "Minimum 6 characters",
              required: true,
              minlength: 6 %>
        </div>

        <!-- Password Confirmation -->
        <div>
          <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.password_field :password_confirmation,
              class: "form-input w-full px-4 py-3 border-2 border-gray-300 rounded-lg outline-none",
              placeholder: "Re-enter password",
              required: true %>
        </div>

        <!-- Phone Number (Optional) -->
        <div>
          <%= form.label :phone_number, "Phone Number (Optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :phone_number,
              class: "form-input w-full px-4 py-3 border-2 border-gray-300 rounded-lg outline-none",
              placeholder: "555-123-4567" %>
        </div>

        <!-- Submit Button -->
        <div>
          <%= form.submit "Sign Up",
              class: "w-full px-6 py-3 bg-washu-red text-white rounded-lg font-bold text-lg hover:bg-red-700 shadow-lg transition-all duration-300" %>
        </div>
      <% end %>

      <!-- Login Link -->
      <div class="mt-6 text-center">
        <p class="text-gray-600">
          Already have an account?
          <%= link_to "Log In", login_path, class: "text-washu-red font-medium hover:underline" %>
        </p>
      </div>
    </div>
  </div>
</main>
