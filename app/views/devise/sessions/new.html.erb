<!-- Header Section -->
<header class="bg-washu-red text-white py-16 relative overflow-hidden">
  <div class="gothic-pattern absolute inset-0 opacity-20"></div>
  <div class="container mx-auto px-4 relative z-10 text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">Welcome Back!</h1>
    <p class="text-xl text-pink-100">Log in to discover campus events</p>
  </div>
</header>

<!-- Main Content -->
<main class="container mx-auto px-4 py-12">
  <div class="max-w-md mx-auto">
    <!-- Flash Messages - Only show notice (confirmation message), not generic auth alerts -->
    <% if notice %>
      <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6 fade-in">
        <div class="flex items-center">
          <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="text-green-700 font-medium"><%= notice %></span>
        </div>
      </div>
    <% end %>

    <!-- Login Card -->
    <div class="bg-white rounded-lg shadow-lg p-8 fade-in">
      <h2 class="text-2xl font-bold text-washu-gray mb-6 text-center">Log In</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <!-- Email -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email,
              class: "form-input w-full px-4 py-3 border-2 border-gray-300 rounded-lg outline-none",
              placeholder: "your.email@example.com",
              required: true,
              autofocus: true,
              autocomplete: "email" %>
        </div>

        <!-- Password -->
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password,
              class: "form-input w-full px-4 py-3 border-2 border-gray-300 rounded-lg outline-none",
              placeholder: "••••••••",
              required: true,
              autocomplete: "current-password" %>
        </div>

        <!-- Remember Me -->
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-washu-red focus:ring-washu-red border-gray-300 rounded" %>
            <%= f.label :remember_me, "Remember me", class: "ml-2 block text-sm text-gray-700" %>
          </div>
        <% end %>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Log In",
              class: "w-full px-6 py-3 bg-washu-red text-white rounded-lg font-bold text-lg hover:bg-red-700 shadow-lg transition-all duration-300" %>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-6 space-y-2 text-center">
        <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-washu-red font-medium hover:underline text-sm" %>
        <% end %>

        <p class="text-gray-600">
          Don't have an account?
          <%= link_to "Sign Up", new_registration_path(resource_name), class: "text-washu-red font-medium hover:underline" %>
        </p>
      </div>
    </div>
  </div>
</main>

