<style>
  .form-input {
    transition: all 0.3s ease;
  }
  .form-input:focus {
    border-color: #BA0C2F;
    box-shadow: 0 0 0 3px rgba(186, 12, 47, 0.1);
  }
</style>

<!-- Header Section -->
<header class="bg-washu-red text-white py-16 relative overflow-hidden">
  <div class="gothic-pattern absolute inset-0 opacity-20"></div>
  <div class="container mx-auto px-4 relative z-10 text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">Join WashU ESpace</h1>
    <p class="text-xl text-pink-100">Connect with fellow Bears through amazing events</p>
  </div>
</header>

<!-- Main Content -->
<main class="container mx-auto px-4 py-12">
  <div class="max-w-md mx-auto">
    <!-- Signup Card -->
    <div class="bg-white rounded-lg shadow-lg p-8 fade-in">
      <h2 class="text-2xl font-bold text-washu-gray mb-6 text-center">Create Account</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <!-- Error Messages -->
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Name -->
        <div>
          <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :name,
              class: "form-input w-full px-4 py-3 border-2 border-gray-300 rounded-lg outline-none",
              placeholder: "Your full name",
              required: true,
              autofocus: true %>
        </div>

        <!-- Email -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email,
              class: "form-input w-full px-4 py-3 border-2 border-gray-300 rounded-lg outline-none",
              placeholder: "your.email@wustl.edu",
              required: true,
              autocomplete: "email" %>
        </div>

        <!-- Password -->
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password,
              class: "form-input w-full px-4 py-3 border-2 border-gray-300 rounded-lg outline-none",
              placeholder: "Minimum 6 characters",
              required: true,
              minlength: 6,
              autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <p class="mt-1 text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</p>
          <% end %>
        </div>

        <!-- Password Confirmation -->
        <div>
          <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password_confirmation,
              class: "form-input w-full px-4 py-3 border-2 border-gray-300 rounded-lg outline-none",
              placeholder: "Re-enter password",
              required: true,
              autocomplete: "new-password" %>
        </div>

        <!-- Phone Number (Optional) -->
        <div>
          <%= f.label :phone_number, "Phone Number (Optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :phone_number,
              class: "form-input w-full px-4 py-3 border-2 border-gray-300 rounded-lg outline-none",
              placeholder: "555-123-4567",
              autocomplete: "tel" %>
        </div>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Sign Up",
              class: "w-full px-6 py-3 bg-washu-red text-white rounded-lg font-bold text-lg hover:bg-red-700 shadow-lg transition-all duration-300" %>
        </div>
      <% end %>

      <!-- Login Link -->
      <div class="mt-6 text-center">
        <p class="text-gray-600">
          Already have an account?
          <%= link_to "Log In", new_session_path(resource_name), class: "text-washu-red font-medium hover:underline" %>
        </p>
      </div>
    </div>
  </div>
</main>

