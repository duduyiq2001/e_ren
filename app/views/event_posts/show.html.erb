<%= render 'shared/back_header', title: 'Event Details', back_path: root_path, back_text: 'Back to Events' %>

<main class="max-w-4xl mx-auto px-4 py-12">
  <%= render 'shared/flash_messages' %>

  <%# Main Info Card %>
  <div class="relative mb-8">
    <div class="absolute inset-0 bg-black skew-card translate-x-3 translate-y-3"></div>
    <div class="relative bg-cyber-card border-2 border-black skew-card p-8" style="border-width: 3px;">
      <div class="transform skew-x-[10deg]">
        <%# Category Badge %>
        <div class="mb-6 flex flex-wrap items-center gap-3">
          <span class="bg-cyber-lime text-black text-sm font-bold px-4 py-2 border-2 border-black">
            <%= @event_post.event_category.name %>
          </span>

          <% if @event_post.requires_approval %>
            <span class="bg-purple-600 text-white text-sm font-bold px-4 py-2 border-2 border-black">
              Requires Approval
            </span>
          <% end %>
        </div>

        <%# Event Title %>
        <h1 class="text-3xl md:text-4xl font-bold text-white mb-8">
          <%= @event_post.name %>
        </h1>

        <%# Event Details Grid %>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-8">
          <div>
            <span class="text-cyber-grey text-xs font-bold block mb-1">Location</span>
            <span class="text-white"><%= @event_post.location_name %></span>
          </div>
          <div>
            <span class="text-cyber-grey text-xs font-bold block mb-1">Date</span>
            <span class="text-white"><%= @event_post.event_time.strftime("%b %d, %Y") %></span>
          </div>
          <div>
            <span class="text-cyber-grey text-xs font-bold block mb-1">Time</span>
            <span class="text-white"><%= @event_post.event_time.strftime("%I:%M %p") %></span>
          </div>
          <div>
            <span class="text-cyber-grey text-xs font-bold block mb-1">Capacity</span>
            <span class="text-white"><%= @event_post.registrations_count %> / <%= @event_post.capacity %></span>
          </div>
        </div>

        <%# Organizer %>
        <div class="border-t border-white/20 pt-6">
          <span class="text-cyber-grey text-sm">Organized by: </span>
          <%= link_to @event_post.organizer.name, user_path(@event_post.organizer), class: "text-cyber-lime hover:underline font-bold" %>
        </div>

        <% if @event_post.google_maps_url.present? %>
          <div class="mt-4">
            <%= link_to @event_post.google_maps_url, target: "_blank", class: "inline-flex items-center gap-2 text-cyber-grey hover:text-cyber-lime text-sm" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              </svg>
              View on Map
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <% if @event_post.requires_approval %>
    <%# Approval Notice %>
    <div class="bg-purple-900/30 border-2 border-purple-500 p-4 mb-8">
      <p class="text-purple-400 text-sm">
        <span class="font-bold">Registration Requires Approval:</span> Your registration will be pending until the organizer reviews and approves it.
      </p>
    </div>
  <% end %>

  <%# Description Section %>
  <% if @event_post.description.present? %>
    <div class="bg-cyber-card border-2 border-cyber-grey p-6 mb-8">
      <h2 class="text-xl text-white font-bold mb-4">Description</h2>
      <p class="text-cyber-grey leading-relaxed whitespace-pre-wrap"><%= @event_post.description %></p>
    </div>
  <% end %>

  <%# Organizer Contact Section %>
  <div class="bg-cyber-card border-2 border-cyber-grey p-6 mb-8">
    <h2 class="text-xl text-white font-bold mb-4">Organizer Contact</h2>

    <% if @registration %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <span class="text-cyber-grey text-xs font-bold block mb-1">Phone</span>
          <span class="text-white"><%= @event_post.organizer.phone_number || 'N/A' %></span>
        </div>
        <div>
          <span class="text-cyber-grey text-xs font-bold block mb-1">Email</span>
          <span class="text-white"><%= @event_post.organizer.email %></span>
        </div>
      </div>
    <% else %>
      <div class="bg-yellow-500/20 border border-yellow-500 p-4">
        <span class="text-yellow-500 text-sm font-medium">Register to view organizer contact</span>
      </div>
    <% end %>
  </div>

  <%# Action Buttons %>
  <div class="flex flex-wrap justify-center gap-4">
    <% if @registration %>
      <%# User is registered %>
      <% if @registration.waitlisted? %>
        <span class="skew-btn bg-yellow-500 text-black px-6 py-3 font-bold">
          Waitlisted
        </span>
      <% else %>
        <span class="skew-btn bg-cyber-lime text-black px-6 py-3 font-bold">
          Registered
        </span>
      <% end %>

      <%= button_to "Unregister",
          event_post_event_registration_path(@event_post, @registration),
          method: :delete,
          class: "skew-btn bg-cyber-grey text-black px-6 py-3 font-bold hover:bg-white transition-colors",
          data: { confirm: "Are you sure you want to unregister?" } %>

      <% if current_user == @event_post.organizer %>
        <%= link_to "View Registrations", registrations_event_post_path(@event_post), class: "skew-btn bg-blue-600 text-white px-6 py-3 font-bold hover:bg-blue-500 transition-colors" %>
        <%= link_to "Edit Event", edit_event_post_path(@event_post), class: "skew-btn bg-green-600 text-white px-6 py-3 font-bold hover:bg-green-500 transition-colors" %>
        <%= button_to "Delete Event", event_post_path(@event_post),
            method: :delete,
            class: "skew-btn bg-cyber-crimson text-white px-6 py-3 font-bold hover:bg-red-400 transition-colors",
            data: { confirm: "Are you sure you want to delete this event? This action cannot be undone." } %>
      <% end %>
    <% else %>
      <%# User is not registered %>
      <% if @event_post.full? %>
        <%= button_to "Join Waitlist",
            event_post_event_registrations_path(@event_post),
            method: :post,
            class: "skew-btn bg-yellow-500 text-black px-8 py-4 font-bold text-lg shadow-[5px_5px_0px_black] hover:shadow-[7px_7px_0px_black] hover:-translate-x-0.5 hover:-translate-y-0.5 transition-all" %>
      <% else %>
        <%= button_to "Register for Event",
            event_post_event_registrations_path(@event_post),
            method: :post,
            class: "skew-btn bg-cyber-crimson text-white px-8 py-4 font-bold text-lg shadow-[5px_5px_0px_black] hover:shadow-[7px_7px_0px_black] hover:-translate-x-0.5 hover:-translate-y-0.5 transition-all" %>
      <% end %>

      <% if current_user == @event_post.organizer %>
        <%= link_to "View Registrations", registrations_event_post_path(@event_post), class: "skew-btn bg-blue-600 text-white px-6 py-3 font-bold hover:bg-blue-500 transition-colors" %>
        <%= link_to "Edit Event", edit_event_post_path(@event_post), class: "skew-btn bg-green-600 text-white px-6 py-3 font-bold hover:bg-green-500 transition-colors" %>
        <%= button_to "Delete Event", event_post_path(@event_post),
            method: :delete,
            class: "skew-btn bg-cyber-crimson text-white px-6 py-3 font-bold hover:bg-red-400 transition-colors",
            data: { confirm: "Are you sure you want to delete this event? This action cannot be undone." } %>
      <% end %>
    <% end %>

    <%= link_to "Back to Events", root_path, class: "skew-btn bg-cyber-card border-2 border-cyber-grey text-cyber-grey px-6 py-3 font-bold hover:border-cyber-lime hover:text-cyber-lime transition-colors" %>
  </div>
</main>

<%# Footer %>
<footer class="text-center text-cyber-grey py-10 border-t border-cyber-grey/30 text-sm mt-12">
  SYSTEM STATUS: ONLINE /// e_ren SPACE Â© <%= Time.current.year %>
</footer>
