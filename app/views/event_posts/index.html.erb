<!-- Header Section -->
<header class="bg-washu-red text-white py-16 relative overflow-hidden">
  <div class="gothic-pattern absolute inset-0 opacity-20"></div>
  <div class="container mx-auto px-4 relative z-10">
    <!-- Navigation Bar -->
    <div class="flex justify-between items-center mb-8">
      <div class="flex-1">
        <h1 class="text-2xl md:text-3xl font-bold">WashU ESpace</h1>
      </div>
      <div class="flex items-center space-x-4">
        <!-- Post Event Button -->
        <%= link_to new_event_post_path, class: "nav-button bg-white text-washu-red px-4 sm:px-6 py-3 rounded-lg font-medium shadow-lg hover:bg-gray-100 flex items-center space-x-2 transition-all duration-300" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <span class="hidden sm:inline">Post Event</span>
        <% end %>

        <!-- Profile Avatar -->
        <% if current_user %>
          <%= link_to user_path(current_user), class: "profile-avatar w-10 h-10 sm:w-12 sm:h-12 bg-white text-washu-red rounded-full flex items-center justify-center font-bold text-lg sm:text-xl shadow-lg hover:shadow-xl transition-all duration-300" do %>
            <%= current_user.name.first %>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Page Title -->
    <div class="text-center">
      <h2 class="text-3xl md:text-5xl font-bold mb-4">Discover Campus Events</h2>
      <p class="text-lg md:text-xl text-pink-100 mb-6">
        Connect with fellow Bears through amazing activities
      </p>

      <!-- Search Bar -->
      <%= link_to event_posts_search_path, class: "inline-block" do %>
        <div class="bg-white text-gray-900 px-6 py-3 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 flex items-center space-x-2">
          <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
          <span class="text-gray-600">Search events...</span>
        </div>
      <% end %>
    </div>
  </div>
</header>

<style>
  .nav-button {
    transition: all 0.3s ease;
  }
  .nav-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }
  .profile-avatar {
    transition: all 0.3s ease;
  }
  .profile-avatar:hover {
    transform: scale(1.05);
  }
  .event-card {
    border: 1px solid #e1c4ac;
    transition: all 0.3s ease;
  }
  .event-card:hover {
    border-color: #ba0c2f;
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }
</style>

<!-- Main Content -->
<main class="container mx-auto px-4 py-8">
  <!-- Flash Messages -->
  <% if notice %>
    <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6 fade-in">
      <div class="flex items-center">
        <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        <span class="text-green-700 font-medium"><%= notice %></span>
      </div>
    </div>
  <% end %>

  <% if alert %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6 fade-in">
      <div class="flex items-center">
        <svg class="w-5 h-5 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="text-red-700 font-medium"><%= alert %></span>
      </div>
    </div>
  <% end %>

  <!-- Event Count -->
  <h2 class="text-2xl font-bold text-washu-gray mb-6">
    Upcoming Events (<%= @event_posts&.count || 0 %>)
  </h2>

  <!-- Events Grid -->
  <% if @event_posts&.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @event_posts.each do |event| %>
        <div class="event-card bg-white rounded-lg shadow-md p-6 fade-in">
          <!-- Event Header -->
          <div class="flex items-center justify-between mb-4">
            <span class="bg-washu-green text-white px-3 py-1 rounded-full text-sm font-medium">
              <%= event.event_category.name %>
            </span>
            <span class="text-sm text-gray-500">
              <%= event.event_time.strftime("%b %d") %>
            </span>
          </div>

          <!-- Event Title -->
          <h3 class="text-lg font-bold text-washu-red mb-2 hover:underline">
            <%= link_to event.name, event_post_path(event) %>
          </h3>

          <!-- Event Details -->
          <div class="space-y-2 mb-4">
            <div class="flex items-center text-gray-600 text-sm">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <%= event.location_name %>
            </div>
            <div class="flex items-center text-gray-600 text-sm">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <%= event.event_time.strftime("%I:%M %p") %>
            </div>
            <div class="flex items-center text-gray-600 text-sm">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
              </svg>
              <%= event.registrations_count %> / <%= event.capacity %> registered
            </div>
          </div>

          <!-- Organizer -->
          <p class="text-gray-500 text-sm mb-4">
            <strong>By:</strong> <%= link_to event.organizer.name, user_path(event.organizer), class: "text-washu-red hover:underline" %>
          </p>

          <!-- Action Buttons -->
          <div class="flex flex-col space-y-2">
            <% if @user_registrations && @user_registrations[event.id] %>
              <% registration = @user_registrations[event.id] %>
              <div class="flex items-center justify-between">
                <% if registration.waitlisted? %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Waitlisted
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Registered
                  </span>
                <% end %>
                <%= button_to "Unregister",
                    event_post_event_registration_path(event, registration),
                    method: :delete,
                    class: "px-3 py-1 bg-red-600 text-white rounded-lg text-sm font-medium hover:bg-red-700 transition-colors",
                    data: { confirm: "Are you sure?" } %>
              </div>
            <% else %>
              <% if event.full? %>
                <%= button_to "Join Waitlist",
                    event_post_event_registrations_path(event),
                    method: :post,
                    class: "w-full px-4 py-2 bg-yellow-500 text-white rounded-lg font-medium hover:bg-yellow-600 transition-colors shadow-sm" %>
              <% else %>
                <%= button_to "Register",
                    event_post_event_registrations_path(event),
                    method: :post,
                    class: "w-full px-4 py-2 bg-washu-red text-white rounded-lg font-medium hover:bg-red-700 transition-colors shadow-sm" %>
              <% end %>
            <% end %>

            <%= link_to "View Details", event_post_path(event), class: "w-full text-center px-4 py-2 bg-gray-100 text-washu-gray rounded-lg font-medium hover:bg-gray-200 transition-colors" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="w-16 h-16 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      <p class="text-gray-500 text-lg mb-4">No upcoming events</p>
      <%= link_to "Post an Event", new_event_post_path, class: "inline-block px-6 py-3 bg-washu-red text-white rounded-lg font-bold hover:bg-red-700 transition-colors shadow-lg" %>
    </div>
  <% end %>
</main>
